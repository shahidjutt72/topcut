<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Service time</th>
      <th>Buffer time</th>
      <th>Show on calendar</th>
      <th>User</th>
      <th>Image file name</th>
      <th>Image file size</th>
      <th>Image content type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.description %></td>
        <td><%= service.cost %></td>
        <td><%= service.service_time %></td>
        <td><%= service.buffer_time %></td>
        <td><%= service.show_on_calendar %></td>
        <td><%= service.user_id %></td>
        <td><%= service.image_file_name %></td>
        <td><%= service.image_file_size %></td>
        <td><%= service.image_content_type %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

